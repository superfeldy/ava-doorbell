<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".CinemaActivity">

    <!-- WebView for camera streams (multiview page) -->
    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <!-- Native RTSP video via ExoPlayer (primary single-camera feed) -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:use_controller="false"
        app:resize_mode="fit"
        android:visibility="gone" />

    <!-- MJPEG fallback: shows camera snapshots when RTSP is unavailable -->
    <ImageView
        android:id="@+id/mjpeg_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:background="#000000"
        android:visibility="gone"
        android:contentDescription="Camera preview" />

    <!-- Touch overlay for gestures (long-press â†’ settings) -->
    <View
        android:id="@+id/touch_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true" />

    <!-- Loading overlay -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_bg"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="@color/accent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Connecting..."
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Layout indicator (shown briefly on swipe, then fades out) -->
    <TextView
        android:id="@+id/layout_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/layout_indicator_bg"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:visibility="gone"
        android:elevation="10dp"
        tools:text="4-UP" />

    <!-- Swipe hint shown on startup to help users discover layout switching -->
    <TextView
        android:id="@+id/swipe_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="90dp"
        android:background="@drawable/layout_indicator_bg"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:text="&#9664;  Swipe to change layout  &#9654;"
        android:visibility="gone"
        android:elevation="10dp" />

    <!-- MQTT status dot (hidden by default) -->
    <View
        android:id="@+id/status_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="8dp"
        android:background="@drawable/status_dot_red"
        android:visibility="gone" />

    <!-- Mic toggle FAB for native 2-way audio -->
    <ImageView
        android:id="@+id/mic_fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:padding="16dp"
        android:src="@drawable/ic_mic"
        android:background="@drawable/mic_fab_bg"
        android:scaleType="fitCenter"
        android:contentDescription="Toggle microphone"
        android:visibility="gone"
        android:elevation="6dp"
        android:clickable="true"
        android:focusable="true" />

</FrameLayout>
