<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_deep"
    android:fillViewport="true"
    tools:context=".ConfigActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="48dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="AVA Doorbell Configuration"
            android:textColor="@color/accent"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- ═══ Connection Section ═══ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="CONNECTION"
            android:textColor="@color/primary"
            android:textSize="13sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/bg_surface"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView style="@style/ConfigLabel" android:text="Server IP" />
            <EditText
                android:id="@+id/input_server_ip"
                style="@style/ConfigInput"
                android:hint="10.10.10.167"
                android:inputType="text" />

            <TextView style="@style/ConfigLabel" android:text="Admin Port" />
            <EditText
                android:id="@+id/input_admin_port"
                style="@style/ConfigInput"
                android:hint="5000"
                android:inputType="number" />

            <TextView style="@style/ConfigLabel" android:text="MQTT Port" />
            <EditText
                android:id="@+id/input_mqtt_port"
                style="@style/ConfigInput"
                android:hint="1883"
                android:inputType="number" />

            <TextView style="@style/ConfigLabel" android:text="Talk Port" />
            <EditText
                android:id="@+id/input_talk_port"
                style="@style/ConfigInput"
                android:hint="5001"
                android:inputType="number" />

            <!-- HTTPS Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use HTTPS"
                        android:textColor="#CCCCCC"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable after deploying SSL to Pi"
                        android:textColor="@color/text_muted"
                        android:textSize="11sp" />
                </LinearLayout>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_https_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/accent"
                    android:trackTint="#333333" />
            </LinearLayout>
        </LinearLayout>

        <!-- ═══ Display Section ═══ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="DISPLAY"
            android:textColor="@color/primary"
            android:textSize="13sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/bg_surface"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView style="@style/ConfigLabel" android:text="Default Camera ID" />
            <EditText
                android:id="@+id/input_default_camera"
                style="@style/ConfigInput"
                android:hint="doorbell_direct"
                android:inputType="text" />

            <TextView style="@style/ConfigLabel" android:text="Default Layout" />
            <Spinner
                android:id="@+id/spinner_default_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:background="@color/bg_deep"
                android:padding="8dp"
                android:popupBackground="@color/bg_surface" />

            <TextView style="@style/ConfigLabel" android:text="Screen Brightness" />
            <SeekBar
                android:id="@+id/seek_bar_brightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:max="100"
                android:progressTint="@color/accent"
                android:thumbTint="@color/accent" />
            <TextView
                android:id="@+id/tv_brightness_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- ═══ API Token Section ═══ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="API AUTHENTICATION"
            android:textColor="@color/primary"
            android:textSize="13sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/bg_surface"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView style="@style/ConfigLabel" android:text="API Token" />
            <EditText
                android:id="@+id/input_api_token"
                style="@style/ConfigInput"
                android:hint="Paste token from admin dashboard"
                android:inputType="textPassword" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate a token in the admin dashboard under Settings"
                android:textColor="@color/text_muted"
                android:textSize="11sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- ═══ Notifications Section ═══ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="NOTIFICATIONS"
            android:textColor="@color/primary"
            android:textSize="13sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/bg_surface"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Doorbell Chime"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp" />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_chime_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/accent"
                    android:trackTint="#333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vibration"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp" />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_vibration_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/accent"
                    android:trackTint="#333333" />
            </LinearLayout>

            <!-- Doorbell overlay toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Floating Overlay"
                        android:textColor="#CCCCCC"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show popup on ring events"
                        android:textColor="@color/text_muted"
                        android:textSize="11sp" />
                </LinearLayout>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_overlay_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/accent"
                    android:trackTint="#333333" />
            </LinearLayout>
        </LinearLayout>

        <!-- ═══ Advanced Section ═══ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="ADVANCED"
            android:textColor="@color/primary"
            android:textSize="13sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/bg_surface"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/btn_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="8dp"
                android:background="@color/primary"
                android:text="Clear WebView Cache"
                android:textColor="@color/text_primary"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_force_reconnect"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="12dp"
                android:background="@color/primary"
                android:text="Force MQTT Reconnect"
                android:textColor="@color/text_primary"
                android:textAllCaps="false" />

            <TextView style="@style/ConfigLabel" android:text="Device Info" />
            <TextView
                android:id="@+id/tv_device_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_muted"
                android:textSize="12sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- ═══ About Section ═══ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/bg_surface"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVA Doorbell"
                android:textColor="@color/accent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_version_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Version 4.0"
                android:textColor="@color/text_muted"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Save and Cancel Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:background="@color/accent"
                android:text="Save Configuration"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:gravity="center" />
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/primary"
                android:text="Cancel"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
